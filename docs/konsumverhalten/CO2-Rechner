    <script>
        function calculateCO2() {
            // Mobilit√§t
            const carKm = parseFloat(document.getElementById('carKm').value) || 0;
            const carType = parseFloat(document.getElementById('carType').value);
            const trainKm = parseFloat(document.getElementById('trainKm').value) || 0;
            const flightKm = parseFloat(document.getElementById('flightKm').value) || 0;

            // Auto: Wert aus Dropdown (g CO‚ÇÇ/km)
            const carCO2 = (carKm * carType) / 1000; // kg CO‚ÇÇ
            
            // Zug: 7 g CO‚ÇÇ/km (Schweizer Durchschnitt)
            const trainCO2 = (trainKm * 7) / 1000; // kg CO‚ÇÇ
            
            // Flugzeug: ca. 120 g CO‚ÇÇ/km (basierend auf BAZL-Daten)
            const flightCO2 = (flightKm * 120) / 1000; // kg CO‚ÇÇ
            
            const mobilityTotal = carCO2 + trainCO2 + flightCO2;

            // Ern√§hrung
            const meatKg = parseFloat(document.getElementById('meatKg').value) || 0;
            const dietFactor = parseFloat(document.getElementById('diet').value);
            
            // Fleisch: ca. 10 kg CO‚ÇÇ pro kg (BAFU-Daten: 50 kg Fleisch = 500 kg CO‚ÇÇ)
            const meatCO2 = meatKg * 10;
            
            // Basis-Ern√§hrung (ohne Fleisch): ca. 1000 kg/Jahr
            const baseFoodCO2 = 1000 * dietFactor;
            
            const foodTotal = meatCO2 + baseFoodCO2;

            // Wohnen
            const heatingCO2 = parseFloat(document.getElementById('heatingType').value);
            const housingTotal = heatingCO2;

            // Gesamtsumme
            const total = mobilityTotal + foodTotal + housingTotal;

            // Ergebnisse anzeigen
            document.getElementById('mobilityResult').textContent = Math.round(mobilityTotal) + ' kg CO‚ÇÇ';
            document.getElementById('foodResult').textContent = Math.round(foodTotal) + ' kg CO‚ÇÇ';
            document.getElementById('housingResult').textContent = Math.round(housingTotal) + ' kg CO‚ÇÇ';
            document.getElementById('totalResult').textContent = (total / 1000).toFixed(2) + ' Tonnen CO‚ÇÇ';

            // Vergleich
            const avgSwiss = 13000; // 13 Tonnen
            const planetaryLimit = 600; // 0.6 Tonnen
            
            let comparisonHTML = '';
            
            if (total < planetaryLimit) {
                comparisonHTML = 'üåü <strong>Ausgezeichnet!</strong> Ihr Fussabdruck liegt unter der planetaren Grenze von 0,6 Tonnen/Jahr.';
            } else if (total < avgSwiss * 0.7) {
                comparisonHTML = '‚úÖ <strong>Gut!</strong> Ihr Fussabdruck liegt unter dem Schweizer Durchschnitt von 13 Tonnen/Jahr.';
            } else if (total < avgSwiss) {
                comparisonHTML = '‚ö†Ô∏è Ihr Fussabdruck liegt nahe am Schweizer Durchschnitt von 13 Tonnen/Jahr.';
            } else {
                comparisonHTML = '‚ö†Ô∏è Ihr Fussabdruck liegt √ºber dem Schweizer Durchschnitt von 13 Tonnen/Jahr.';
            }
            
            comparisonHTML += '<br><br>';
            comparisonHTML += '<strong>Zum Vergleich:</strong><br>';
            comparisonHTML += '‚Ä¢ Schweizer Durchschnitt: 13,0 Tonnen CO‚ÇÇeq/Jahr<br>';
            comparisonHTML += '‚Ä¢ Weltdurchschnitt: 6,0 Tonnen CO‚ÇÇeq/Jahr<br>';
            comparisonHTML += '‚Ä¢ Planetare Grenze: 0,6 Tonnen CO‚ÇÇeq/Jahr<br>';
            comparisonHTML += '<br><em>Hinweis: Diese Rechnung erfasst nur einen Teil Ihres Fussabdrucks. Der vollst√§ndige Fussabdruck umfasst auch Konsum, Dienstleistungen und importierte G√ºter.</em>';

            document.getElementById('comparisonText').innerHTML = comparisonHTML;

            // Ergebnisse einblenden
            document.getElementById('results').classList.add('show');
            document.getElementById('results').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
